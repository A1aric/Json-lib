<?xml version="1.0" encoding="ISO-8859-1"?>
<document>
   <properties>
      <title>Json-lib::Changelog</title>
      <author email="aalmiray@users.sourceforge.net">
         Andres Almiray
      </author>
   </properties>
   <body>
      <release
         version="N/A"
         date="2007-04-06"
         desc="Current development release">
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1693658">
            Optional space trimming when reading XML.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1693654">
            Optional removal of namespace prefixes when reading XML.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1693652">
            Skip namespaces when reading from XML.
         </action>
      </release>
      <release
         version="1.1"
         date="2007-03-31"
         desc="Release 1.1">
         <action
            dev="Andres Almiray"
            type="update">
            Updated FAQ and Getting Started guide.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Added NoopJavaIdentifierTransformer and made it the default
            (performs no conversion).
         </action>
         <action
            dev="Andres Almiray"
            type="add"
            issue="1690942">
            XMLSerializer can not handle namespace declarations.
         </action>
         <action
            dev="Andres Almiray"
            type="add"
            issue="1690941">
            [Regression] toBean() fails with namespaced properties.
         </action>
         <action
            dev="Andres Almiray"
            type="add"
            issue="1684034">
            Allow transformation of key values to proper Java
            identifier.
         </action>
         <action
            dev="Andres Almiray"
            type="add"
            issue="1656551">
            Upgrade XML support.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Promoted length() to JSON interface.
         </action>
         <action
            dev="Andres Almiray"
            type="add"
            issue="1679986">
            Skip type information when writing XML.
         </action>
         <action
            dev="Andres Almiray"
            type="add"
            issue="1679985">
            Move child properties to parent when writing XML.
         </action>
         <action
            dev="Andres Almiray"
            type="add"
            issue="1679982">
            Allow parsing of duplicate properties
         </action>
      </release>
      <release
         version="1.0.1"
         date="2007-02-27"
         desc="Service release">
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1670146">
            [Compatibility] Constructor JSONObject( String) does not
            work
         </action>
      </release>
      <release
         version="1.0"
         date="2007-02-11"
         desc="The _1.0_ release">
         <action
            dev="Andres Almiray"
            type="delete">
            Removed deprecated classes.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1650535">
            String property incorrectly parsed as an array. Tests
            provided by paulfield[at]users[dot]sourceforge[dot]net &amp;
            ekeogh[at]thoughtworks[dot]com
         </action>
      </release>
      <release
         version="1.0b2"
         date="2007-01-20"
         desc="Second 1.0 beta release">
         <action
            dev="Andres Almiray"
            type="update">
            Updated javadocs.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Moved interface JSONTypes to net.sf.json.xml
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Deprecated JSONDynaBean, JSONDynaClass &amp;
            DynaBeanToBeanMorpher. Use MorphDynaBean, MorphDynaClass
            &amp; BeanMorpher from EZMorph instead.
         </action>
         <action
            dev="Andres Almiray"
            type="delete">
            Removed net.sf.json.util.CDL, repeated functionality.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1635890">
            JSONDynaBean nested arrays not treated as an array. Test
            provided by arco.vandenheuvel[at]points[dot]com
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1630742">
            JSONArray does not transforms byte[], short[] and long[]
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1630736">
            JSONArray is missing validation on float[] and double[]
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1630258">
            Validate ECMAScript max &amp; min Number values.
            (rolled-back)
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1622676">
            JSONArray.put does not use excludes.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1622675">
            JSONObject.put does not use excludes.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1622674">
            JSONArray does not pass excludes.
         </action>
      </release>

      <release
         version="1.0b1"
         date="2006-12-18"
         desc="First 1.0 beta release">
         <action
            dev="Andres Almiray"
            type="add">
            Added JSONAssert for easy JSON testing.
         </action>
         <action
            dev="Andres Almiray"
            type="add">
            Updated JSONFunction constructor for correct length of
            parameters.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated javadocs and site docs.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Only default constructors are public (JSONObject &amp;
            JSONArray).
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Class objects are converted to Strings (toJSON) and back
            (toJava).
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1614276">
            Skip a property without write method.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1614275">
            Skip a property without read method.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1614273">
            Annotation should not be transformed.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1614278">
            Change IAEs for JSONException.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1613402">
            JSONObject tries to access Enum.getDeclaringClass().
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1611204">
            Inspect property's value type in factory methods.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1610979">
            Support different encodings on XmlSerializer.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1608212">
            JSONDynaClass allows multidimensional arrays.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1607448">
            Primitives support for JSONDynaBean.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1557286">
            Support Java 1.5 Enum in JSONObject and JSONArray.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1606609">
            JDK 1.3 RuntimeException is not nestable.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1602386">
            Add printer friendly methods to JSON interface.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1596168">
            JSONArray fails to convert an array of
            BigDecimals/BigInteger.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1592799">
            Nested Lists were not handled properly in
            JSONObject.toBean()
         </action>
      </release>

      <release
         version="0.9"
         date="2006-10-12"
         desc="Sixth public release">
         <action
            dev="Andres Almiray"
            type="add">
            Added FAQ and "Who is using it" sections.
         </action>
         <action
            dev="Andres Almiray"
            type="add">
            Added new JSONSerializer utility class.
         </action>
         <action
            dev="Andres Almiray"
            type="add">
            Added new interface JSON to identify a valid JSON type
            (JSONObject, JSONArray, JSONNull).
         </action>
         <action
            dev="Andres Almiray"
            type="add">
            Added support for JSONString in builders and value setters.
            FR 1557286.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Removed JSONObject.append() as it was very similar to
            JSONObject.accumulate()
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            JSONObject and JSONarray will convert Byte/Short/Long to
            Integer, Float to Double when needed.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            JSONArray.fromObject now allows creation of a single element
            array (all valid types).
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Cleaned up the core API, moved mixed purpouse classes to
            net.sf.json.util
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated front page and howto documentation.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1564992">
            Multiple nested JSONException.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1553617">
            JSONObject.toBean() generates a ClassCastException.
         </action>
      </release>

      <release
         version="0.8"
         date="2006-08-29"
         desc="Fifth public release">
         <action
            dev="Andres Almiray"
            type="add">
            Refactored converter package into EZMorph
            (http://ezmorph.sourceforge.net).
         </action>
         <action
            dev="Andres Almiray"
            type="add">
            Added RegexpUtils for easy regexp handling.
         </action>
         <action
            dev="Andres Almiray"
            type="add">
            Added more tests.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated "Getting Started" documentation.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Moved RegexpMatchers to package net.sf.json.regexp
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1543117">
            Perl5RegexpMatcher is missing a return statement.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1542104">
            JSONObject.toBean must handle interfaces.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1542092">
            JSONObject.toBean can not process all nested beans.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1540196">
            JSONArray did not create multidimensional arrays correctly.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1540137">
            JSONObject's fromObject() and fromBean() did not support
            DynaBeans properly
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1538330">
            XmlSerializer writes wrong JSONFunction data.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1538095">
            JSONObject.fromObject() does not work properly when passed a
            boolean as parameter in JVM 1.5+
         </action>
      </release>

      <release
         version="0.7.1"
         date="2006-08-09"
         desc="Service release">
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1537557">
            Json-lib had wrong class numbers for JDK 1.3.1
         </action>
      </release>

      <release
         version="0.7"
         date="2006-08-07"
         desc="Fourth public release">
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1529946">
            Make Json-lib JDK 1.3.1 compatible. FR 1529946.
         </action>
      </release>

      <release
         version="0.6"
         date="2006-07-24"
         desc="Third public release">
         <action
            dev="Andres Almiray"
            type="add">
            Added support for DynaBean and java bean conversions.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated the XML generated by XMLSerializer.
            <br />
            JSONArray uses &lt;a&gt; for root element, JSONObject uses
            &lt;o&gt; for root element.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated usage documentation.
         </action>
      </release>

      <release
         version="0.4"
         date="2006-07-11"
         desc="Second public release">
         <action
            dev="Andres Almiray"
            type="add">
            Added test suites for each package and for full project.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1516306">
            Support js functions as type. FR 1516306.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Moved common methods of JSONObject, JSONArray to JSONUtils.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Renamed XML to XMLSerializer. Now uses XOM to parse
            documents.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Moved common assertion methods to Assertions (tests).
         </action>
         <action
            dev="Andres Almiray"
            type="delete">
            Deleted HTTP related classes.
         </action>
      </release>

      <release
         version="0.2"
         date="2006-07-01"
         desc="First public release">
         <action
            dev="Andres Almiray"
            type="add">
            First release.
         </action>
      </release>
   </body>
</document>
